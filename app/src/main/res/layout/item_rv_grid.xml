			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="match_parent"
				android:layout_margin="30dp"
				android:text="33333"
				android:gravity="center"
				android:layout_height="wrap_content"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="match_parent"
					android:layout_margin="40dp"
					android:text="44444"
					android:background="#ffffff"
					android:layout_weight="1"
					android:gravity="center"
					android:layout_height="wrap_content"/>
			</LinearLayout>
		</FrameLayout>
